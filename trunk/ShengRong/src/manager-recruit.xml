<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="Manager/recruit" namespace="/Manager/recruit" extends="struts-default,json-default">
		<interceptors>
			<interceptor name="loginStatus" class="com.shengrong.manager.interceptors.LoginStatus">
			</interceptor>
		</interceptors>
		<global-results>
            <!-- 逻辑名为login的结果，映射到/login.jsp页面 -->
            <result name="login">/Manager/Account/login.jsp</result>
        </global-results>
        
		<action name="saveRecruitPage" class="com.shengrong.manager.actions.RecruitAction">
			<result name="success">/Manager/Recruit/recruit.jsp</result>
			<interceptor-ref name="loginStatus"/><!-- 配置登录状态检验拦截器 -->
			<interceptor-ref name="defaultStack"/><!-- 配置自定义的拦截器 -->
		</action>
		<action name="saveRecruit" class="com.shengrong.manager.actions.RecruitAction" method="save">
			<result name="success" type="chain">
				<param name="actionName">recruitList</param>
				<param name="namespace">/Manager/recruit</param>
			</result>
			<result name="error">/Manager/error.jsp</result>
			<interceptor-ref name="loginStatus"/><!-- 配置登录状态检验拦截器 -->
			<interceptor-ref name="defaultStack"/><!-- 配置自定义的拦截器 -->
		</action>
		<action name="recruitList" class="com.shengrong.manager.actions.RecruitAction" method="list">
			<result name="success">/Manager/Recruit/recruitList.jsp</result>
		</action>
		<action name="checkRecruit" class="com.shengrong.manager.actions.RecruitAction" method="check">
			<result name="success">/Manager/Recruit/recruitInfo.jsp</result>
			<result name="error">/Manager/Recruit/recruitInfo.jsp</result>
			<interceptor-ref name="loginStatus"/><!-- 配置登录状态检验拦截器 -->
			<interceptor-ref name="defaultStack"/><!-- 配置自定义的拦截器 -->
		</action>
		<action name="deleteRecruit" class="com.shengrong.manager.actions.RecruitAction" method="delete">
			<result type="json">
        		<param name="root">
					result
					<!-- result是action中设置的变量名，也是页面需要返回的数据，该变量必须有setter和getter方法 -->
				</param>
        	</result>
			<interceptor-ref name="loginStatus"/><!-- 配置登录状态检验拦截器 -->
			<interceptor-ref name="defaultStack"/><!-- 配置自定义的拦截器 -->
		</action>
	</package>
</struts>